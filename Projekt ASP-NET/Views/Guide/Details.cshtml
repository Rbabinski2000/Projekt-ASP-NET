@model Data.Entities.GuideEntity
<div class="container tabela">
<h2>Detale wycieczki o ID: @Model.Id</h2>

<div class="details-container">
    <dl class="dl-horizontal">
        <dt>Imię:</dt>
        <dd>@Model.Name</dd>

        <dt>Nazwisko:</dt>
        <dd>@Model.Surname</dd>

        <dt>Pesel:</dt>
        <dd>@Model.Pesel</dd>

        <dt>Adres:</dt>
        <dd>@Model.Address.City @Model.Address.Street</dd>

    </dl>
</div>

<div class="back-link">
    <a asp-controller="Travel" asp-action="Index" class="btn btn-primary">Powrót do listy opiekunów</a>
</div>
</div>