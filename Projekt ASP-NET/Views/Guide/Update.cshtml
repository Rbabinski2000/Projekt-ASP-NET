@using Projekt_ASP_NET.Enums
@model Data.Entities.GuideEntity
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container tabela">
    <h2 class="mt-3">Zmień dane opiekuna o ID:@Model.Id</h2>
    <form asp-controller="Guide" asp-action="Update" method="post">
        <div asp-validation-summary="All"></div>
        
        <div class="mb-3">
            <label asp-for="Name">Imię</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input class="form-control" type="text" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label asp-for="Surname">Nazwisko</label>
            <span asp-validation-for="Surname" class="text-danger"></span>
            <input class="form-control" type="text" asp-for="Surname" />
        </div>



        <div class="mb-3">
            <label asp-for="Pesel">Pesel</label>
            <span asp-validation-for="Pesel" class="text-danger"></span>
            <input class="form-control" type="text" asp-for="Pesel" />
        </div>


        <div class="form-group">
            <label asp-for="Address">Address</label>
            <select class="form-control" asp-for="AddressId">
                @foreach (var item in ViewBag.AddressList)
                {
                    <option value="@item.Id">@item.City @item.Street</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <div>
                <button class="btn btn-primary" type="submit">Zapisz</button>
                <button class="btn btn-primary" type="reset">Resetuj</button>
            </div>
            <div class="back-link">
                <a asp-controller="Travel" asp-action="Index" class="btn btn-primary">Powrót do listy opiekunów</a>
            </div>
        </div>
</form>
</div>

