@using Projekt_ASP_NET.Models;
@using Data.Entities;
@model PagingList<TravelEntity>

<div class="container tabela">
    <h2>Lista kontaktów</h2>
<table class="table tabela">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Data rozpoczęcia
            </th>
            <th>
                Data zakończenia
            </th>
            <th>
                Miejsce rozpoczęcia
            </th>
            <th>
                Opiekun
            </th>
            <th>
                Akcje
            </th>
        </tr>
        @foreach (var item in @Model.Data)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.StartDate.Value.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.EndDate.Value.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.StartPlace
                </td>
                <td>
                    @item.GuideId
                </td>
                <td>
                    <a class="btn btn-primary btn-details"
                       asp-action="Details"
                       asp-controller="Travel"
                       asp-route-id=@item.Id>Szczegóły</a>
                    <a class="btn btn-success btn-update"
                       asp-action="Update"
                       asp-controller="Travel"
                       asp-route-id=@item.Id>Edytuj</a>
                    <a class="btn btn-danger btn-delete"
                       asp-action="Delete"
                       asp-controller="Travel"
                       asp-route-id=@item.Id>Usuń</a>
                </td>
            </tr>
        }
        </table>
        <nav aria-label="Books page navigation">
            <ul class="pagination">
                @if (Model.IsPrevious)
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="Travel"
                           asp-action="PagedIndex"
                           asp-route-page="@(Model.Page - 1)"
                           asp-route-size="@Model.Size">
                            Poprzednia
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link">Poprzednia</a>
                    </li>
                }
                <li class="page-item disabled">
                    <a class="page-link">@Model.Page</a>
                </li>
                @if (Model.IsNext)
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="Travel"
                           asp-action="PagedIndex"
                           asp-route-page="@(Model.Page + 1)"
                           asp-route-size="@Model.Size">
                            Następna
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link">Następna</a>
                    </li>
                }
            </ul>
        </nav>
 </div>
